
<div class="container">
    <div class="well well-lg">

    <h2><%= @gif.title %></h2>

    <p><img src=<%= @gif.link %> ></p>

    <p>
    <%= form_for [@gif, @gifcomment], :remote => true do |f| %>
      <%= hidden_field_tag 'gif_id', @gif.id %>
      <%= f.text_field :link, :placeholder => "Your response URL", :value => nil %>
      <%= f.submit "Submit Your Gif" %>
    <% end %>
    </p>

   <ul class="respond_gif">
    <% @gifshow.each do |gif| %>
      <li><img src=<%= gif.link %> > </li>
    <% end %>
  </ul>


  </div>
</div>
