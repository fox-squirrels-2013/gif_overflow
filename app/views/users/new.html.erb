<div class="container">
  <div id="index_view">
  <h2>Welcome to GIFS</h1>
  </div>
</div>

<div class="col-lg-4">
  <div class="well well-lg">

    <h2>Sign up</h2>

    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <p>
      <%= label_tag :username %><br />
      <%= f.text_field :username, :placeholder => "yourpoopyusername" %><br />
      </p>

      <p>
      <%= label_tag :email %><br />
      <%= f.text_field :email, :placeholder => "poop@gmail.com" %><br />
      </p>

      <p>
      <%= label_tag :password %><br />
      <%= f.password_field :password, :placeholder => "passwordpoop" %><br />
      </p>
      <p class="button"><%= submit_tag "Sign me up" %></p>
    <% end %>
  </div>
</div>
