<div class="container">
  <div id="index_view">
  <h2>Welcome to GIFS</h1>
  </div>
</div>

<div class="col-lg-4">
  <div class="well well-lg">

    <h2><%= @user.username %>'s Info</h2>

    <p>
      Username: <%= @user.username %> <br>
      Email: <%= @user.email %>
    </p>
  </div>
</div>

<div class="col-lg-4">
  <div class="well well-lg">

    <h3>Update your info</h3>

    <% if is_user? %>
      <%= form_for @user do |f| %>
        <p>
        <%= label_tag :username %><br />
        <%= f.text_field :username, :value => nil, :placeholder => "New email here" %><br />
        </p>

        <p>
        <%= label_tag :email %><br />
        <%= f.text_field :email, :value => nil, :placeholder => "New email here" %><br />
        </p>

        <p>
        <%= label_tag :Password %><br />
        <%= f.password_field :password, :placeholder => "Update password" %><br />
        </p>

        <p class="button"><%= submit_tag "Update info" %></p>
      <% end %>
    <% else %>
      <p>
        You can only edit your own profile. :(
      </p>
    <% end %>
  </div>
</div>
